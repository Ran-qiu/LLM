# 应用配置
APP_NAME=LLM Manager
APP_VERSION=1.0.0
DEBUG=False

# 数据库配置
DATABASE_URL=sqlite:///./data/llm.db

# JWT 配置
SECRET_KEY=your-secret-key-change-this-in-production-use-at-least-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# 加密密钥（用于加密 API 密钥，必须是 32 字节）
ENCRYPTION_KEY=your-encryption-key-32-bytes-long-change-this

# CORS 配置
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:80

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# n8n 集成配置
N8N_ENABLED=true
N8N_API_TOKEN=your-n8n-api-token-change-this
N8N_WEBHOOK_URL=http://n8n:5678/webhook
N8N_BASE_URL=http://n8n:5678

# Ollama 配置
OLLAMA_ENABLED=true
OLLAMA_BASE_URL=http://ollama:11434

# LangChain 配置
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=llm-manager

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# LLM API Keys（可选，也可以在 UI 中配置）
# OPENAI_API_KEY=sk-xxx
# ANTHROPIC_API_KEY=sk-ant-xxx
# GOOGLE_API_KEY=xxx

# 文件上传配置
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_DIR=./data/uploads

# Redis 配置（可选，用于缓存和会话）
# REDIS_ENABLED=false
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_DB=0

# 邮件配置（可选，用于通知）
# SMTP_ENABLED=false
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-password
# SMTP_FROM=noreply@example.com
